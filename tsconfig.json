{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["DOM", "ES6"],
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.mjs"],
  "exclude": ["node_modules"]
}
