//add paths in the future
{
  "compilerOptions": {
    "module": "Node16",
    "resolveJsonModule": true,
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitThis": true,
    "moduleResolution": "node16",
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
