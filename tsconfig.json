{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "Node",
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noEmit": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@pageObjects": ["page_objects"],
      "@pageObjects/*": ["page_objects/*"],
      "@constants/*": ["constants/*"],
      "@helpers/*": ["helpers/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
